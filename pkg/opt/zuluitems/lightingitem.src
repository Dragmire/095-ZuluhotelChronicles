use uo;
use os;

program lighting(me,item)
    if (me.cmdlevel < 1)
      return;
    endif
	SetScriptController( me );
	if (item.color == 33921)
	  item.color := 0x455;
	  SendSysMessage(me, "lighting is now off.");
	  return;
	endif
	item.color := 33921;
    Detach();
	while (item.color == 33921)
	  SendSysMessage(me, "maintaining light");
      me.setlightlevel( 0, 60 );
	  sleep(60);
	endwhile
endprogram