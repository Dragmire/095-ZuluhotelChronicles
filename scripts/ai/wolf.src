program KillPlayers()


	if (getobjproperty(me, "frozen"))
		me.frozen := 1;
	endif

    	SetWarMode( 0 );
  
    	main_AI_loop();

endprogram

function CloseDistance( opponent )

    case Distance( me, opponent )
        1:              // the most likely, so first 
        0:
            return 1;
        default:
            RunToward( opponent );
            return 0;
    endcase

endfunction
