	var value := 3; //tiles to lead by (redundant - see below);
	var ydiff;
	var xdiff;
	var leaveloop := 0;
	var uns;
	var mount := GetEquipmentByLayer( master, 25 );
	if (mount) 
		value := 4;
	else
		value := 3;
	endif
	while (leaveloop == 0)
	tox := master.x;
	toy := master.y;
		//Find furthest point from master, in front of master's direction, AND with LOS to point AND a player or NPC isnt in the way
		Case(master.facing)
			0: toy := toy -value ;
			1: tox := tox +value-1;
			    toy := toy -value -1;
			2: tox := tox+value;
			3: tox :=  tox+value-1;
			    toy := toy + value-1;
			4: toy := toy +value;
			5: tox := tox-value-1;
			    toy := toy+value-1;
			6: tox :=  tox-value ;
			7: tox := tox- value-1;
			   toy := toy - value-1;
		endcase
		if (CheckLosAt( me, tox, toy, GetWorldHeight( tox, toy )))
			leaveloop := 1;
		endif
		if (value == 1)
			leaveloop := 1;
		endif
		value := value -1;
		if (value < 0)
			value := 0;
		endif;
	endwhile
	var ambehind;
	ambehind := 0;
	Case(master.facing)
		0: if (me.y > master.y)
			ambehind := 1;
		    endif
		1: if (me.x < master.x)
			ambehind := 1;
		    endif
		2: if (me.x < master.x)
			ambehind := 1;
		    endif
		3: if (me.x < master.x)
			ambehind := 1;
		    endif
		4: if (me.y < master.y)
			ambehind := 1;
		    endif
		5: if (me.x > master.x)
			ambehind := 1;
		    endif
		6: if (me.x > master.x)
			ambehind := 1;
		    endif
		7: if (me.x > master.x)
			ambehind := 1;
		    endif
	endcase

	//If trying to overtake master and am behind master, tele onto master to enable running through master, instead of around
	if (ambehind == 1 and Distance(me,master) < 2 and (me.x - tox > value or me.x-tox < -value or me.y-toy > value or me.y-toy < -value)  and CheckLosAt( me, tox, toy, GetWorldHeight( tox, toy )))
		MoveCharacterToLocation( me, master.x, master.y, master.z, MOVECHAR_FORCELOCATION ); 
	endif
	uns := 0; //warmode flag
	//Run toward determined lead point
	if (me.x != tox or me.y !=toy)
	//if ((me.x - tox >1 or me.x-tox < -1) or (me.y-toy > 1 or me.y-toy < -1))
		if (me.warmode= 0)	
			uns := 1;	
			me.dexterity_mod := me.dexterity_mod + 5000;	
		endif
		if (CheckLosAt( me, tox, toy, GetWorldHeight( tox, toy ) ) or (Distance(me,master) > 2 and Distance(me,master) < 6))
			RunTowardLocation(tox,toy);
		endif
		if (uns == 1)		
			me.dexterity_mod := me.dexterity_mod - 5000;
		endif
	endif
	Dizzy(tox,toy);
endfunction

function CutRobe(robe)
	var scissors := 0;
	if(robe.objtype == 0x1f03)
		foreach item in enumerateitemsincontainer(me.backpack)
			if ( item.objtype  == 0xf9e)
				scissors := 1;
			endif
		endforeach
		if (scissors == 1)	
			performaction(me, 0x0020);
			PlaySoundEffect(me, 0x249);
			CreateItemInBackpack(me, 0xE21 , 5);
			DestroyItem(robe);	
			return 1;
		endif
	endif
endfunction
		
function Dizzy(tox,toy)
	//Experimental anti 'jiggle' code for npc movement
	// self contained apart from tox and toy which are the destination x,y variables
	var xdiff;
	var ydiff;
	var lastx := GetObjProperty(me,"LastLeadX");
	var lasty := GetObjProperty(me,"LastLeadY");
	if (!GetObjProperty(me,"DizzyTimer") or ReadGameClock() > GetObjProperty(me,"DizzyTimer"))
		SetObjProperty(me,"DizzyTimer",ReadGameClock()+60);
		EraseObjProperty(me,"Dizzy");
		return;
	endif
	if (!lastx or !lasty or (me.x == lastx and me.y == lasty)) //I'm standing still
		SetObjProperty(me,"LastLeadX",me.x);
		SetObjProperty(me,"LastLeadY",me.y);
		return;
	endif
	var diz := GetObjProperty(me,"Dizzy");
	if (!diz)
		diz := 0;
		SetObjProperty(me,"DizzyTimer",ReadGameClock()+40);
	endif
	if(!GetObjProperty(me,"CanMoveCheck") or ReadGameClock() > GetObjProperty(me,"CanMoveCheck")  )
		SetObjProperty(me,"CanMoveCheck",ReadGameClock()+1);
		leadmovey := GetObjProperty(me,"LeadMoveY");
		if (leadmovey)
			if (me.y != toy)
				//i did want to move on the yaxis
				if (me.y == leadmovey)
					//but i didnt move on the y axis
					//say("cant move on y axis!");
					diz := diz + 1;
				endif
			endif
		endif
		SetObjProperty(me,"LeadMoveY",me.y);
		leadmoveX := GetObjProperty(me,"LeadMoveX");
		if (leadmovex)
			if (me.x !=tox)
				//i did want to move on the xaxis
				if (me.x == leadmovex)
					//but i didnt move on the x axis
					//say("cant move on x axis!");
					diz := diz + 1;
				endif
			endif
		endif
		SetObjProperty(me,"LeadMoveX",me.x);
	endif
	SetObjProperty(me,"LastLeadX",me.x);
	SetObjProperty(me,"LastLeadY",me.y);
	//I'm Dizzy from Jumping about
	if (diz > GetObjProperty(me,"Dizzy"))
	if (diz == 3)
		Say("I'm getting dizzy!");
	endif	
	if (diz ==6)
		Say("I think I'm going to be sick!");
	endif	
	if (diz == 9)
		Say("Argh!!!!!!!");
	endif
	if (diz=12)
		diz := 0;
		following := 0;
		guarding := 0;
		GoMad(master);
		Say("Tell Slaine to fix this! :P");
	endif
	endif
	//Say(diz);
	SetObjProperty(me,"Dizzy",diz);
endfunction

