function Guard()
	if ( (me.frozen) )
		sleep(10);
		return;
	endif

	if ( nextwatch <= readgameclock() ) 
		nextwatch := readgameclock() + 5;
		if ( random(20)=1 and !GetObjProperty(me,"squelch"))
			if (GetObjProperty(me,"TakePoint"))
				case (Random(3)+1)
					1 :say("*guarding "+guarding.name+"*");
					2 :say("gotcha covered "+guarding.name);
					3 :say("I'm guarding "+guarding.name);
				endcase
			endif
			if (!GetObjProperty(me,"TakePoint"))
				case (Random(6)+1)
					1 : say("I've got your back, " + guarding.name);	if ( random(20)=1 ) 	say("WAY back"); 	endif
					2 :say("*guarding "+guarding.name+"*");
					3 :say("I'll watch your back, "+guarding.name);
					4 :say("gotcha covered "+guarding.name);
					5 :say("I'm guarding "+guarding.name);
					6: say("I'll watch our six");
				endcase
			endif
		endif
		foreach mob in ListHostiles( guarding, 9, 0 );
			Fight(mob);
		endforeach
	endif
	
	if ( (!guarding.strength) or (guarding.dead) or (distance(me,guarding) > 15) )
		guarding := 0;
	endif

endfunction

function Follow()
	var range :=0;
	if (GetObjProperty(me,"TakePoint"))
		range := 7;
	else
		range := 4;
	endif
	if ( (me.frozen) )
		sleep(10);
		return;
	endif
	if(GetObjProperty(me,"hunger") > 9)
		me.hidden := 0;
		Say("I'm not going anywhere until I get something to eat!");
		following := 0;
		EraseObjProperty(me,"TakePoint");
		guarding := 0;
		return;
	endif
	if(me.stamina < 2)
		Say("I'm out of stamina!");
		following := 0;
		EraseObjProperty(me,"TakePoint");
		guarding := 0;
		return;
	endif
	okie := 1;
	cwtiles := ListItemsNearLocationOfType(cint(following.x), cint(following.y), cint(following.z), 12, 16046);
	foreach item in cwtiles
		if (item.graphic == 16046 and following.multi)
			okie := 0;
			setwarmode(0);
			guarding := 0;
			sleep(1);
			following := 0;
			chaseloop := 0;
			say("No thanks. I don't like boats.");
			return;
		endif
	endforeach
	var d := Distance( me, following );
	if (d < range)
		chaseloop := 0;
	elseif (( d > 14 ) or ( chaseloop > 50 ))
		if (okie == 1)
			MoveCharacterToLocation( me, following.x, following.y, following.z,
				MOVECHAR_FORCELOCATION );
		chaseloop := 0;
		endif
	else
		if (Distance(me,following) > 3)
			me.dexterity_mod := me.dexterity_mod + 5000;
			RunToward(following);
			chaseloop := chaseloop + 1;
			me.dexterity_mod := me.dexterity_mod - 5000;
		endif
	endif

	if ( (!following.strength) or (following.dead) )
		following := 0;
	endif

	if ( (master) and (!guarding) )
		guarding := master;
	endif

	if (guarding)
		Guard();
	endif

	if (me.dexterity_mod >= 5000)
		me.dexterity_mod := me.dexterity_mod - 5000;
	endif
	if (GetObjProperty(me,"TakePoint"))
		TakePoint();
	endif
endfunction

