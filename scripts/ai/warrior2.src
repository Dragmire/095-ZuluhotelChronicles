	elseif ( GetObjProperty(horse,"master") != masterserial )
		say("Howzabout you lemme ride YOUR horse?");
		return;
	endif

	var mounttype := 0;
	case (horse.graphic)
	0xcc: //dark brown/horse
			mounttype := 0x3ea2;
		0xc8: //lightbrown/horse2
			mounttype := 0x3e9f;
		0xe2: //light grey/horse3
			mounttype := 0x3ea0;
		0xe4: //greybrown/horse4
			mounttype := 0x3ea1;
		0xdc: //Llama:
			mounttype := 0x3ea6;
		0xd2: //desert
			mounttype := 0x3ea3;
		0xda: //frenzied
			mounttype := 0x3ea4;
		0xdb: //forest
			mounttype := 0x3ea5;
		0x23d: //vortex
			mounttype := 0x3ea7;
		0xd5:  //polar
			mounttype := 0x03f0f;
		0x3c: //drake1
			mounttype := 0x03f0e;
		0xF1: //Unicorn
			mounttype := 0x469;
		0xF3: //Undead Horse
			mounttype := 0x1FA;
		0xF4: //Beetle
			mounttype := 0x3F10;
		0xF6: //Ridgeback
			mounttype := 0x1FB;
		0x84: //Sphinx
			mounttype :=  0x3F13;

	endcase


	if (!mounttype)
