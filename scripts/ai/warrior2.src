function CanEat(me)

	var cfg := readconfigfile("::food");
	var elem := findconfigelem(cfg,"cooked");
	var foodarray := GetConfigStringArray(elem,"food");

	var hgr := Cint(GetObjProperty(me, "hunger"));

	foreach item in enumerateitemsincontainer(me.backpack)
		if ( cstr(item.objtype) in foodarray )
			PlaySoundEffect(me,cint(0x3b) + Random(3));
			Say("*Yummy!*");
			var foodvalue := cint(GetObjProperty(item,"foodvalue"));
			if (!foodvalue)
				foodvalue := 1;
			endif
			hgr := hgr - 4;
			if (hgr < 0)
				hgr := 0;
			endif
			SetObjProperty(me,"hunger",hgr);
			SubtractAmount(item,1);
			return 1;
		endif
	endforeach

	return 0;

endfunction

function Hunger()
	var hungertime := GetObjProperty(me,"hungertime");
	var hgr := GetObjProperty(me,"hunger");
	if (hgr > 5)
		if (!CanEat( me ) )
			HungerDamage( me);
		endif
	endif

	if (!hungertime or ReadGameClock() > hungertime)
		SetObjProperty(me,"hungertime",ReadGameClock()+(60*30));
		if (!hgr)
			hgr := 0;
		endif
		hgr := hgr + 1;
		if (hgr > 10)
			hgr := 10;
		endif
		SetObjProperty(me,"hunger",hgr);
	endif		
endfunction


function HungerDamage( chr )
	var hgr := GetObjProperty(chr, "hunger");
	var hungerdmgtime := GetObjProperty(chr,"hungerdmgtime");
	if (!hungerdmgtime or ReadGameClock() > hungerdmgtime);
		SetObjProperty(me, "hungerdmgtime", ReadGameClock()+10);
		hungerdmgtime := GetObjProperty(chr,"hungerdmgtime");
		if (hgr > 9)
			if (chr.stamina > 10)
				chr.stamina := chr.stamina -10;
			endif
		endif
	endif
endfunction

