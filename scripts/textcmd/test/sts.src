Use os;
Use uo;

Include "include/client";

Program textcmd_mount( Who, Hue )

    Hue := CInt( Hue );
    
    SendSysMessage( Who, "This is what the text color will look like, " + Hue, FONT_NORMAL, Hue );
    SendSysMessage( Who, "This is what the text color will look like, " + Hue, FONT_NORMAL );
    
Endprogram
