tempitem.decay :=20;
tempitem := CreateItemAtLocation( who.x-1,who.y+1, who.z, 0x821, 1 );
tempitem.decay :=20;
tempitem := CreateItemAtLocation( who.x+1,who.y+1, who.z, 0x821, 1 );
tempitem.decay :=20;
tempitem := CreateItemAtLocation( who.x,who.y-1, who.z, 0x823, 1 );
tempitem.decay :=20;
tempitem := CreateItemAtLocation( who.x,who.y+1, who.z, 0x823, 1 );
tempitem.decay :=20;
tempitem := CreateItemAtLocation( who.x+1,who.y-1, who.z, 0x823, 1 );
