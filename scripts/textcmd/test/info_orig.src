function FillInWeapon( who )
   var weapfile := ReadConfigFile( ":combat:itemdesc" );
   var npcfile := ReadConfigFile( "::npcdesc" );
   if(who.weapon)
      var idx := find( who.weapon.name, "[", 1 ); //ignore maker's mark
      if(idx!=0)
          var tempn := who.weapon.desc;
          tempn := tempn[1,idx-1];
          data[138] := tempn;
      else
          if(who.weapon.desc == "nodraw")
             data[138] := "Wrestling";
          else
             data[138] := who.weapon.desc;
          endif
      endif
      var dam := weapfile[who.weapon.objtype].Damage;
      if(!dam)
          data[140] := "n/a";
      else
          data[140] := dam;
      endif
      data[142] := who.weapon.hp + " / " + who.weapon.maxhp;
   else
      data[138] := "n/a";
      data[140] := "n/a";
      data[142] := "n/a";
      if(who.isA(POLCLASS_NPC)) //Hi, i'm an NPC
           var dam := npcfile[who.npctemplate].AttackDamage;
           var weap := npcfile[who.npctemplate].AttackSkillId;
           var ar := npcfile[who.npctemplate].AR;
           if( weap )
              data[138] := weap;
           endif
           if( dam )
              data[140] := dam;
           endif
           if( ar )
              data[142] := "AR: " + ar;
           endif
      endif
   endif
endfunction

function EditStat(who, character, result)
  if(character.cmdlevel<3)
    noaccess(character);
    return;
  endif
  SendSysMessage(character, "Caution! Values are changed immediately, Integers only!. Hit ESC to cancel.");
  var val := CInt(RequestInput(character, character.backpack, "Enter a new value."));
  if(!val)
    SendSysMessage(character, "Canceled.");
    return;
  endif
  case(result)
    1: SetBaseStrength(who,val);
    LogEditing( character, who, "Strength", val );
    2: SetBaseIntelligence(who,val);
    LogEditing( character, who, "Intelligence", val );
    3: SetBaseDexterity(who,val);
    LogEditing( character, who, "Dexterity", val );
    4: MoveCharacterToLocation(who, val, who.y, who.z);
    5: MoveCharacterToLocation(who, who.x, val, who.z);
    6: MoveCharacterToLocation(who, who.x, who.y, val);
    7: SetHp(who, val);
    LogEditing( character, who, "Hp", val );
    9: SetMana(who, val);
    LogEditing( character, who, "Mp", val );
   11: SetStamina(who, val);
   LogEditing( character, who, "Sp", val );
   13: who.ar_mod := 0;
       who.ar_mod := val - who.ar;
       LogEditing( character, who, "AR", val );
   14: who.graphic := val;
   15: who.color := val;
  endcase
endfunction

Function LogEditing( Who, Player, Edited, EditAmt )

    Var datafile := ReadConfigFile("EditedChars");

    If( datafile == error )
    SendSysMessage( Who, "File Error " + datafile.errortext );
    Return 0;
    Endif

    If (datafile)

    Var elem;
    elem:={ };
    elem.append({ "Staff Name",  Who.name });
    elem.append({ "Staff Serial",  Hex( Who.serial) });
    elem.append({ "Player Name", Player.name });
    elem.append({ "Player Serial",    Hex( Player.serial ) });
    elem.append({ "Edited",  Edited });
    elem.append({ "Amount",  EditAmt });

    AppendConfigFileElem( "EditedChars", "CharEdited", "" , elem );
    UnloadConfigFile( "EditedChars" );
    EndIf

Endfunction

